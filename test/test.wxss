/* test/test.wxss */
page{
  height: 100%;
  width: 100%;
}
.logo{
  width: 100%;
  background-color: #007bff;
  height: 60px;
}
.logo image{
  width: 150px;
  height: 30px;
  margin-top: 30px;
  margin-left: 15px;
}

.search{
  background-color: #007bff;
  margin: 0;
  height: 150px;
  width: 100%;
  display: flex;
}

.search input{
  border-bottom: 2px solid white;
  margin-left: 10px;  
  padding-top: 10px;
  padding-bottom: 5px;
  text-shadow: 1px 1px black;
}

.search button{
  margin-top:  20px;
  margin-bottom: 20px;
  background-color: #ff0000d8;
}

.left{
  display: flex;
  flex-direction: column;
  width: 75%;
  justify-content: flex-end;
  padding-left: 20px;
  padding-right: 20px;
  margin-bottom: 20px;
}

.right{
  display: flex;
  flex-direction: column;
  width: 25%;
  justify-content: flex-end;
  padding-right: 20px;
}

.down{
  width: 100%;
  height: 100%;
}

.agent{
  margin: 0;
  height: 100%;
  width: 100%;
  display: flex;
}

.aleft{
  display: flex;
  flex-direction: column;
  width: 100px;
  justify-content: center;
  padding-left: 20px;
}
.aleft image{
  width: 80px;
  height: 100px;
}

.aright{
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
  width: 100%;
  padding: 0 10px 0 10px;
  margin-top: 20px;
}
.name{
  font-size: 0.8rem;
  font-weight: bold;
}
.com{
  font-size: 0.6rem;
  font-style: italic;
}
.porttitle{
  display: inline-block;
  font-size: 0.7rem;
  font-weight: bold;
}
.port{
  display: inline-block;
  font-size: 0.7rem;
}