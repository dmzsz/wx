/* index/index.wxss */
page {
  background: #f6f6f6;
  display: flex;
  flex-direction: column;
  justify-content: center;
  height:100%; 
}

.bg_box{
    width: 100%;
    position: absolute;
    top: 0;
    left: 0;
    bottom: 0;
    z-index: -100; 
}

.bg_box video{
    width: 100%;
   height: 100%;
}

.logoimage{
  width: 576rpx;
  padding-top: 150px;
}

.main{
  display: flex;
  align-items: center;
  justify-content: center; 
  width: 150px;
  height: 150px;
  border: 10px solid rgba(120, 120, 245, 0.2);
  background-color: rgba(120, 120, 245, 0.5);
  border-radius: 50%;
}
.main2{
  display: flex;
  align-items: center;
  justify-content: center; 
  color: white;
  font-size: 1.5rem;
  background-color: rgba(255, 255, 255, 0);
  text-shadow: 1px 1px black;
}